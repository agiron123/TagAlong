<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
	android:background="@drawable/calistrip_bkgd" >
	
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/map_button" />
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/imageButton1">

	<RelativeLayout
	    	android:id="@+id/relativeLayout1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_below="@id/scrollView1" >
        
	<TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="18dp"
	        android:text="Events"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hor_scrollView1"
        android:layout_below="@+id/textView1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <ListView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@android:id/list">
			</ListView>

            <include layout="@layout/event_carousel_item"/>
            <include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
			
        </LinearLayout>
    </HorizontalScrollView>
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Watch List"
        android:layout_below="@+id/hor_scrollView1"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <HorizontalScrollView
        android:id="@+id/hor_scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

     		<include layout="@layout/event_carousel_item"/>
            <include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
        </LinearLayout>
    </HorizontalScrollView>

     <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:text="Groups"
        android:padding="5dp"
        android:layout_below="@+id/hor_scrollView2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <include layout="@layout/event_carousel_item"/>
            <include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
			<include layout="@layout/event_carousel_item"/>
        </LinearLayout>
    </HorizontalScrollView>
    </RelativeLayout>
	</ScrollView>
	
   
</RelativeLayout>