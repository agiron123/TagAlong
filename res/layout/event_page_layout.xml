<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventPageActivity" 
    android:background="@drawable/calistrip_bkgd" >

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hor_scrollView1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/mapbutton"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
           
            <LinearLayout 
    			android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:orientation="vertical"
    			android:padding="5dp">   
        		<TextView
            		android:id="@+id/groupNameTextView"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:text="Concert"
            		android:layout_gravity="center" 
            		android:textAppearance="?android:attr/textAppearanceMedium" />       
        		<ImageView
            		android:id="@+id/placeholderImage1"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/tomorrowworldlarge"
            		android:layout_gravity="center"  />
			</LinearLayout>
			
            <LinearLayout 
    			android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:orientation="vertical"
    			android:padding="5dp">   
        		<TextView
            		android:id="@+id/groupNameTextView"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:text="Movie Night"
            		android:layout_gravity="center" 
            		android:textAppearance="?android:attr/textAppearanceMedium" />       
        		<ImageView
            		android:id="@+id/placeholderImage2"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/frozonlarge"
            		android:layout_gravity="center"  />
			</LinearLayout>
			
            <LinearLayout 
    			android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:orientation="vertical"
    			android:padding="5dp">   
        		<TextView
            		android:id="@+id/groupNameTextView"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:text="superbowl"
            		android:layout_gravity="center" 
            		android:textAppearance="?android:attr/textAppearanceMedium" />       
        		<ImageView
            		android:id="@+id/placeholderImage3"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/superbowllarge"
            		android:layout_gravity="center"  />
			</LinearLayout>
			
            <LinearLayout 
    			android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:orientation="vertical"
    			android:padding="5dp">   
        		<TextView
            		android:id="@+id/groupNameTextView"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:text="Yard Show"
            		android:layout_gravity="center" 
            		android:textAppearance="?android:attr/textAppearanceMedium" />       
        		<ImageView
            		android:id="@+id/placeholderImage4"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/yrdshowlarge"
            		android:layout_gravity="center"  />
			</LinearLayout>
			
            <LinearLayout 
    			android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:orientation="vertical"
    			android:padding="5dp">   
        		<TextView
            		android:id="@+id/groupNameTextView"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:text="MegaCon"
            		android:layout_gravity="center" 
            		android:textAppearance="?android:attr/textAppearanceMedium" />       
        		<ImageView
            		android:id="@+id/placeholderImage5"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/megakonlarge"
            		android:layout_gravity="center"  />
			</LinearLayout>
            
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Events"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/mapbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/map_button" />

    <Button
        android:id="@+id/addwatchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="63dp"
        android:layout_toLeftOf="@+id/textView1"
        android:text="Add to Watch List" />

    <Button
        android:id="@+id/suggestgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addwatchlist"
        android:layout_alignRight="@+id/horizontalScrollView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="Suggest to Group" />

</RelativeLayout>